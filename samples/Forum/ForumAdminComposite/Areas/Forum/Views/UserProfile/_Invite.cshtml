@using Andromeda.Composites.Mvc
@model AdminComposite.Areas.Forum.InputModels.RegisterForumUserInputModel
@{
	ViewBag.Title = "Invite Users";
	Layout = null;
}

@using (Html.BeginFormForInputModel(Model, true, Url.Action("List", "UserProfile", new { forumId = Model.ForumIdentifier })))
{
	@Html.HiddenFor(m => m.ForumIdentifier)
	;
	@Html.HiddenFor(m => m.Password)
	<fieldset>
		<legend>Invite User</legend>

		<div class="input-container">
			<label>First Name*</label>
			<br />
			@Html.TextBoxFor(m => m.FirstName)
		</div>

		<div class="input-container">
			<label>Last Name*</label>
			<br />
			@Html.TextBoxFor(m => m.LastName)
		</div>

		<div class="input-container">
			<label>Email*</label>
			<br />
			@Html.TextBoxFor(m => m.Email)
		</div>

		<div class="input-container">
			<label>Username*</label>
			<br />
			@Html.TextBoxFor(m => m.Username)
		</div>

		<div class="note-container">
			<p class="note">An automatically generated password will be sent to the specified email address</p>
		</div>
	</fieldset>

	<button type="submit">Invite User</button>
}