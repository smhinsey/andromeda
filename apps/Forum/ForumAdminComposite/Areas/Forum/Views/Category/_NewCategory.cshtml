@using Euclid.Composites.Mvc
@model AdminComposite.Areas.Forum.InputModels.CreateCategoryInputModel
<section>
	@using (Html.BeginFormForInputModel(Model))
	{
		@Html.HiddenFor(m => m.ForumIdentifier)
		;
		@Html.HiddenFor(m => m.CreatedBy)
		;
		@Html.ValidationSummary()
		<fieldset>
			<legend>New Category</legend>
		
			<dl>
				<dt>@Html.LabelFor(m => m.Name)</dt>
				<dd>@Html.TextBoxFor(m => m.Name, new { id = "category-name" })</dd>

				<dt>@Html.LabelFor(m => m.Slug)</dt>
				<dd>@Html.TextBoxFor(m => m.Slug, new { id = "category-slug" })</dd>

				<dt class="checkbox">@Html.LabelFor(m => m.Active)</dt>
				<dd>@Html.CheckBoxFor(m => m.Active, new { id = "category-active" })</dd>
			</dl>
		</fieldset>
		<button type="submit">Save</button>
	}
</section>