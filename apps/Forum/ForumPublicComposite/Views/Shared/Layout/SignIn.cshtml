@model ForumComposite.Models.SignInInputModel

@if (!Request.IsAuthenticated)
{
	using (Html.BeginForm("Authenticate", "Authentication", FormMethod.Post, new { @class = "pull-right" }))
	 {
	 	<input name="username" class="input-small" type="text" placeholder="Username" />
	 	<input name="password" class="input-small" type="password" placeholder="Password"/>
	 	<input class="btn primary" type="submit" value="Sign In"/>
	 }
} else
{
		using (Html.BeginForm("SignOut", "Authentication", FormMethod.Post, new { @class = "pull-right" }))
	 {
	 	<input class="btn primary" type="submit" value="Sign Out"/>
	 }
}