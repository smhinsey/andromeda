<div class="topbar">
	<div class="topbar-inner">
		<div class="container-fluid">
			<a class="brand" href="@Url.RouteUrl("Home")">{Forum Name}</a>
			<ul class="nav">
				<li class="@ViewBag.CategoriesClass"><a href="@Url.RouteUrl("Categories")">Categories</a></li>
				<li class="@ViewBag.TagsClass"><a href="@Url.RouteUrl("Tags")">Tags</a></li>
				<li class="@ViewBag.InfoClass"><a href="@Url.RouteUrl("InfoPage")">Info</a></li>
			</ul>
			<form action="" class="pull-right">
				<input class="input-small" type="text" placeholder="Username">
				<input class="input-small" type="password" placeholder="Password">
				<button class="btn primary" type="submit">Sign in</button> <button data-controls-modal="registration-modal" data-backdrop="static" class="btn small">Register account</button>
			</form>
		</div>
	</div>
</div>

<div class="modal hide fade" style="display: none;" id="registration-modal">
	<div class="modal-header">
		<a href="#" class="close">&times;</a>
		<h3>Register for {Forum Name}</h3>
	</div>
	<div class="modal-body">
		<form>
			<fieldset>
            
				<div class="clearfix error">
					<label for="username">Username</label>
					<div class="input">
						<input class="large" name="username" size="30" type="text" value="username"/>
						<span class="help-inline">Username already taken.</span>
					</div>
				</div>
            
				<div class="clearfix">
					<label for="email">Email</label>
					<div class="input">
						<input class="large" name="email" size="30" type="text" value="account@emailprovider"/>
					</div>
				</div>  
            
				<div class="clearfix success">
					<label for="password">Password</label>
					<div class="input">
						<input class="large" name="password" size="30" type="password" value="secret"/>
						<span class="help-inline">Password is secure.</span>
					</div>
				</div>            
			</fieldset>    
            
		</form>
	</div>
	<div class="modal-footer">
		<button class="btn primary">Complete Registration</button>
		<a href="#" class="btn secondary">Cancel</a>
	</div>
</div>